{
  "name": "engraving-simulator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "dev": "vite --host --port 5174",
    "build": "vite build",
    "build:integrated": "VITE_BASE_PATH=/simulator/ vite build",
    "build:admin": "cross-env VITE_BASE_PATH=/admin/ vite build",
    "build:subdomain": "VITE_BASE_PATH=/ vite build",
    "setup:integration": "powershell -ExecutionPolicy Bypass -File setup-integration.ps1",
    "setup:integration:unix": "bash setup-integration.sh",
    "preview": "vite preview",
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "deploy": "bash deploy.sh",
    "deploy:win": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop engraving-simulator",
    "pm2:restart": "pm2 restart engraving-simulator",
    "pm2:logs": "pm2 logs engraving-simulator",
    "lint": "echo \"No lint configured\"",
    "test": "vitest run --passWithNoTests",
    "test:e2e": "playwright test --pass-with-no-tests",
    "qa": "pnpm test && pnpm test:e2e"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "pdf-lib": "^1.17.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^6.11.1"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.88",
    "@playwright/test": "^1.48.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.14",
    "esbuild": "^0.27.2",
    "jsdom": "^24.1.3",
    "pdfjs-dist": "^5.4.530",
    "postcss": "^8.4.30",
    "tailwindcss": "^3.4.4",
    "terser": "^5.44.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "vitest": "^2.1.1"
  }
}
